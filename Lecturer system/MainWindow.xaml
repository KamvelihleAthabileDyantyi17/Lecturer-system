<Window x:Class="Lecturer_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <Button x:Name="SubmitClaimButton" Content="Submit New Claim" Margin="10" Click="SubmitClaimButton_Click"/>
            <Button x:Name="MyClaimsButton" Content="My Claims" Margin="10" Click="MyClaimsButton_Click"/>
            <Button x:Name="ApproveClaimsButton" Content="Approve Claims" Margin="10" Click="ApproveClaimsButton_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>