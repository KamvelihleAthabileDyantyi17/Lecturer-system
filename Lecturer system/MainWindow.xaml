<StackPanel Grid.Column="0" Background="#F0F0F0">

    <TextBlock Text="Menu" FontWeight="Bold" Margin="10,20,10,10" FontSize="16"/>

    <Button x:Name="SubmitClaimButton" 
                    Content="Submit New Claim" 
                    Margin="10,5" 
                    Padding="5"
                    Click="SubmitClaimButton_Click"/>

    <Button x:Name="MyClaimsButton" 
                    Content="My Claims" 
                    Margin="10,5" 
                    Padding="5"
                    Click="MyClaimsButton_Click"/>

    <Button x:Name="ApproveClaimsButton" 
                    Content="Approve Claims" 
                    Margin="10,5" 
                    Padding="5"
                    Click="ApproveClaimsButton_Click"/>

    <Button x:Name="HRDashboardButton" 
                    Content="HR Dashboard" 
                    Margin="10,5" 
                    Padding="5"
                    Click="HRDashboardButton_Click"/>

    <Rectangle Height="1" Fill="Gray" Margin="10,20"/>

    <Button x:Name="LogoutButton" 
                    Content="Logout" 
                    Margin="10,5" 
                    Background="#FFCDD2"
                    Click="LogoutButton_Click"/>

</StackPanel>