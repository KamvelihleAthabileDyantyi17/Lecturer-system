<Page x:Class="Lecturer_system.ApproveClaimsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Coordinator Approval"
      Background="White">

    <Page.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#f0f0f0"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Pending Approvals" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#333"/>
            <TextBlock Text="Review claims submitted by lecturers below." 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <DataGrid x:Name="PendingClaimsGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="50"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#eeeeee"
                  BorderThickness="1"
                  BorderBrush="#cccccc">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Lecturer Name" 
                                    Binding="{Binding User.Name}" 
                                    Width="*"
                                    FontSize="14"/>

                <DataGridTextColumn Header="Date Submitted" 
                                    Binding="{Binding DateSubmitted, StringFormat=yyyy-MM-dd}" 
                                    Width="150"/>

                <DataGridTextColumn Header="Hours" 
                                    Binding="{Binding HoursWorked}" 
                                    Width="100"/>

                <DataGridTextColumn Header="Total Due" 
                                    Binding="{Binding TotalAmount, StringFormat=R {0:N2}}" 
                                    FontWeight="Bold"
                                    Width="120"/>

                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                <Button Content="✔ Approve" 
                                        Tag="{Binding ClaimId}"
                                        Click="ApproveButton_Click" 
                                        Background="#28a745" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,5"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"/>

                                <Button Content="✖ Reject" 
                                        Tag="{Binding ClaimId}"
                                        Click="RejectButton_Click" 
                                        Background="#dc3545" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,5"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>