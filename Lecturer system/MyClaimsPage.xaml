<Page x:Class="Lecturer_system.MyClaimsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="My Claims">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="My Submitted Claims" FontSize="24" Margin="0,0,0,20"/>

            <DataGrid x:Name="ClaimsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim Period" Binding="{Binding ClaimPeriod, StringFormat='d'}" Width="*"/>
                    <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted, StringFormat='d'}" Width="*"/>
                    <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="Auto"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='C'}" Width="Auto"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>