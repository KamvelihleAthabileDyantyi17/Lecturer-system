<Page x:Class="Lecturer_system.SubmitClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Submit New Claim">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Submit a New Claim" FontSize="24" Margin="0,0,0,20"/>

            <TextBlock Text="Claim Period:"/>
            <DatePicker x:Name="ClaimPeriodPicker" Margin="0,5,0,10"/>

            <TextBlock Text="Hours Worked:"/>
            <TextBox x:Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Hourly Rate:"/>
            <TextBox x:Name="HourlyRateTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Additional Notes (Optional):"/>
            <TextBox x:Name="NotesTextBox" Margin="0,5,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Supporting Document (Optional):"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <Button x:Name="UploadButton" Content="Upload File..." Click="UploadButton_Click"/>
                <TextBlock x:Name="SelectedFileText" Text=" No file selected." VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <Button x:Name="SubmitButton" Content="Submit Claim" HorizontalAlignment="Left" Padding="10,5" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>