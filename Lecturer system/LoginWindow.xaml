<Window x:Class="Lecturer_system.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20" />

            <Button x:Name="LoginButton" Content="Login"
                    Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>